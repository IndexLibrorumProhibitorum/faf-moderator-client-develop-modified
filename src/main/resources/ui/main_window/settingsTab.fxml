<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="root" xmlns="http://javafx.com/javafx/8.0.111"
      fx:controller="com.faforever.moderatorclient.ui.main_window.SettingsController">
    <TextField fx:id="AccountNameOrEmailTextField" minWidth="300" promptText="Account name or email"/>
    <PasswordField fx:id="AccountPasswordTextField" minWidth="300" promptText="Password"/>
    <Button fx:id="SaveAccountButton" text="Save" mnemonicParsing="false" onAction="#SaveAccountButton"/>
    <Text textAlignment="CENTER"  text="If credentials are wrong and you can not auto login anymore, change them in account_credentials.txt -> File is in project folder."/>
    <TextField fx:id="PathAccountFile"/>
    <Text textAlignment="CENTER"  text="For every line one item, without brackets whatsoever. Same path as â†‘"/>
    <Button fx:id="BanDataPermanentVSN" text="Open BlacklistedPermanentVSN" mnemonicParsing="false" onAction="#BanDataPermanentVSN"/>
    <Button fx:id="BanDataTemporaryVSN" text="Open BlacklistedTemporaryVSN" mnemonicParsing="false" onAction="#BanDataTemporaryVSN"/>
    <Button fx:id="BanDataPermanentIP" text="Open BlacklistedPermanentIP" mnemonicParsing="false" onAction="#BanDataPermanentIP"/>
    <Separator prefHeight="10" />
    <Button fx:id="LoadAllReportsAndModeratorStatsAndTopOffendersButton" text="Load Moderator stats and current top offenders with 3 or more reports (+copy content to clipboard for zulip):" mnemonicParsing="false" onAction="#LoadAllReportsAndModeratorStatsAndTopOffendersButton"/>
    <Separator prefHeight="10" />
    <TextField fx:id="AllModeratorStatsTextField" minWidth="300" promptText="Refresh Reports to see stats about moderators - total sum of DISCARDED and COMPLETED"/>
    <Separator prefHeight="10" />
    <TextField fx:id="MostReportsOffendersTextField" minWidth="100" promptText="MostReportsOffendersTextField"/>
    <Separator prefHeight="10" />
    <Button fx:id="TemplateCompletedButton" text="Open template for completed" mnemonicParsing="false" onAction="#TemplateCompletedButton"/>
    <Button fx:id="TemplateDiscardedButton" text="Open template for discarded" mnemonicParsing="false" onAction="#TemplateDiscardedButton"/>
    <Separator minHeight="10" />
    <Button fx:id="TemplateReportButton" text="Open template for report" mnemonicParsing="false" onAction="#TemplateReportButton"/>
    <Button fx:id="LoadAllModeratorStatsButton" text="Load all stats" mnemonicParsing="false" visible="false" onAction="#LoadAllModeratorStatsButton"/>
</VBox>
